<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.khanal.popularmovies.DetailActivityFragment"
    tools:showIn="@layout/activity_detail"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/title_block"
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/poster_details"
                android:layout_below="@id/movie_title"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/poster"
                    style="@style/poster"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:paddingLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:weightSum="5"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:layout_margin="5dp"
                        android:id="@+id/movie_year"
                        android:textSize="24dp"
                        android:text="Year"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <!--<TextView-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:textStyle="italic"-->
                    <!--android:id="@+id/movie_length"-->
                    <!--android:textSize="20dp"-->
                    <!--android:text="120min"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"/>1-->

                    <TextView
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:id="@+id/movie_rating"
                        android:textSize="16dp"
                        android:text="7.1/10"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <Button
                        android:onClick="markFavorite"
                        style="@style/favorite_button"
                        android:text="Mark As\nFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:padding="10dp"
                android:layout_below="@id/poster_details"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/synapsis"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lorem ipsum, Lore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_margin="10dp"
                    android:background="#333333"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

        </RelativeLayout>

    </ScrollView>



</LinearLayout>
